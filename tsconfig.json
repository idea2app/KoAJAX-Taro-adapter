{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "declaration": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["source/*.ts"],
  "typedocOptions": {
    "name": "KoAJAX Taro adapter",
    "excludeExternals": true,
    "excludePrivate": true,
    "readme": "./README.md",
    "plugin": ["typedoc-plugin-mdn-links"]
  }
}
